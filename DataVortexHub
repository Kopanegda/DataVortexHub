import random



def main():

    # Генерация случайного числа от 1 до 10

    secret_number = random.randint(1, 10)



    # Поприветствуем пользователя

    print("Привет! Я загадал число от 1 до 10. Попробуй угадать!")



    # Цикл для угадывания числа

    while True:

        try:

            # Получаем предполагаемое число от пользователя

            guess = int(input("Введите ваше предположение: "))



            # Проверяем угадал ли пользователь число

            if guess == secret_number:

                print("Поздравляю! Вы угадали число!")

                break

            else:

                print("Увы! Не угадал. Попробуйте еще раз!")

        except ValueError:

            print("Пожалуйста, введите целое число.")



if __name__ == "__main__":

    main()
